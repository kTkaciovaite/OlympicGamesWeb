@using OlympicGames.Domain
@model OlympicGamesWeb.Models.ArticleViewModel

@{
    ViewBag.Title = "CreateNewArticle";
}

<h2>Create New Article</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form class="form-horizontal" action="Index.cshtml">
        <fieldset>
            <div class="form-group article-create-new">
                @Html.LabelFor(x => x.ArticleName, new {@class = "col-lg-3 control-label text-right"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.ArticleName, new {@class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ArticleName)
                </div>
            </div>
            <div class="form-group article-create-new">
                @Html.LabelFor(x => x.Text, new {@class = "col-lg-3 control-label text-right"})
                <div class="col-lg-9">
                    @Html.TextAreaFor(x => x.Text, new {@class = "form-control", @rows = "8"})
                    @Html.ValidationMessageFor(x => x.Text)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-9 col-lg-offset-3">
                    <a href="/Article" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
}