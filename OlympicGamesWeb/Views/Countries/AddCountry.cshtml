@model OlympicGamesWeb.Models.CountryViewModel

@{
    ViewBag.Title = "AddCountry";
}

<h2>Add Country</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form class="form-horizontal" action="Index.cshtml">
        <fieldset>
            <div class="form-group article-create-new">
                @Html.LabelFor(x => x.Name, new {@class = "col-lg-3 control-label text-right"})
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.Name, new {@class = "form-control short-label"})
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
            </div>
            <div class="form-group article-create-new">
                @Html.LabelFor(x => x.CountryCode, new { @class = "col-lg-3 control-label text-right" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.CountryCode, new { @class = "form-control short-label", @rows = "8" })
                    @Html.ValidationMessageFor(x => x.CountryCode)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-9 col-lg-offset-3">
                    <a href="/Countries" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
}